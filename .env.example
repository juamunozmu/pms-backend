# Environment Configuration
DEBUG=True
ENVIRONMENT=development

# Project Info
PROJECT_NAME=PMS API
VERSION=0.1.0
API_V1_STR=/api/v1

# Security
SECRET_KEY=your-secret-key-here-change-in-production
REFRESH_SECRET_KEY=your-refresh-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1

# Database
DATABASE_URL=postgresql+asyncpg://pms_user:pms_password@localhost:5432/pms_db

# CORS - Separate multiple origins with commas
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@pms.com
EMAILS_FROM_NAME=PMS System

# Business Rules
HELMET_FEE=1000
DATA_RETENTION_DAYS=365
GLOBAL_BONUS_PERCENTAGE=15.0

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:5173
